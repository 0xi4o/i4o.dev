{
	"name": "i4o.dev",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "pnpm build:css && pnpm build:site",
		"build:css": "tailwindcss -m -i ./styles/main.css -o app/styles/main.css",
		"build:site": "remix build",
		"dev": "concurrently \"pnpm dev:css\" \"pnpm dev:site\"",
		"dev:css": "tailwindcss -w -i ./styles/main.css -o app/styles/main.css",
		"dev:site": "remix dev",
		"typecheck": "tsc"
	},
	"dependencies": {
		"@i4o-oss/catalystui": "^0.5.2",
		"@radix-ui/react-icons": "^1.1.1",
		"@remix-run/node": "^1.12.0",
		"@remix-run/react": "^1.12.0",
		"@remix-run/vercel": "^1.12.0",
		"@vercel/node": "^2.6.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.12.0",
		"@remix-run/eslint-config": "^1.12.0",
		"@remix-run/serve": "^1.12.0",
		"@tailwindcss/typography": "^0.5.9",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.8",
		"concurrently": "^7.6.0",
		"eslint": "^8.27.0",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.2",
		"tailwindcss": "^3.2.6",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": ">=14"
	}
}
